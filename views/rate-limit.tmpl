{{ define "rate-limit" }}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Too Many Requests â€¢ SparkProxy</title>
    <link rel="stylesheet" href="/css/global.css" />
    <style>
        body {
            background: radial-gradient(1200px 800px at 70% -10%, rgba(34, 211, 238, .08), transparent 60%),
                        radial-gradient(1000px 600px at 10% 120%, rgba(125, 211, 252, .06), transparent 60%), #0a0a0f;
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }
        .card {
            background: #101018;
            border: 1px solid #1f2937;
            border-radius: 16px;
            padding: 48px;
            max-width: 480px;
            width: 100%;
            text-align: center;
        }
        .icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 24px;
            background: rgba(248, 113, 113, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .icon svg {
            width: 32px;
            height: 32px;
            color: #f87171;
        }
        h1 {
            margin: 0 0 12px;
            font-size: 1.75rem;
            font-weight: 600;
            color: #f87171;
        }
        p {
            margin: 0 0 24px;
            color: #9ca3af;
            line-height: 1.6;
        }
        .info {
            background: #1f2937;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
        }
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #374151;
        }
        .info-row:last-child {
            border-bottom: none;
        }
        .info-label {
            color: #9ca3af;
            font-size: 0.875rem;
        }
        .info-value {
            color: #22d3ee;
            font-weight: 500;
            font-size: 0.875rem;
        }
        .retry {
            font-size: 0.875rem;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
        </div>
        <h1>Too Many Requests</h1>
        <p>You have exceeded the rate limit for this domain. Please slow down your requests.</p>
        <div class="info">
            <div class="info-row">
                <span class="info-label">Limit</span>
                <span class="info-value">{{ .Limit }} requests / {{ .Period }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Retry after</span>
                <span class="info-value">{{ .RetryAfter }} seconds</span>
            </div>
        </div>
        <p class="retry">Refresh the page after the cooldown period to continue.</p>
    </div>
</body>
</html>
{{ end }}
